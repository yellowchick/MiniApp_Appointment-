/* 页面基础样式 */
page {
  background-color: #f5f7fa;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  color: white;
  padding: 40rpx 30rpx 80rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.header-content {
  text-align: center;
}

.header .title {
  font-size: 42rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}

.header .subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 标签导航 */
.tabs {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  color: #7f8c8d;
  position: relative;
}

.tab.active {
  color: #2575fc;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #2575fc;
  border-radius: 3rpx;
}

.badge {
  display: inline-block;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background: #ff4757;
  color: white;
  border-radius: 18rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-left: 10rpx;
}

/* 通知列表 */
.notification-list {
  height: calc(100vh - 400rpx);
  padding: 30rpx;
}

.notification-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.05);
  border-left: 8rpx solid #6a11cb;
}

.notification-item.unread {
  border-left-color: #ff6b6b;
  background: linear-gradient(to right, #fff8f8 0%, #ffffff 100%);
}

.notification-item.confirmed {
  border-left-color: #1dd1a1;
}

.notification-item.rejected {
  border-left-color: #ff6b6b;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  align-items: center;
}

.notification-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
}

.notification-type {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
  background: rgba(106, 17, 203, 0.1);
  color: #6a11cb;
}

.notification-time {
  font-size: 26rpx;
  color: #7f8c8d;
}

.notification-message {
  font-size: 30rpx;
  color: #34495e;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.notification-details {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #7f8c8d;
  border-top: 1rpx dashed #eee;
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.status-badge {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

.status-badge.unread {
  background: rgba(255, 107, 107, 0.15);
  color: #ff6b6b;
}

.status-badge.confirmed {
  background: rgba(29, 209, 161, 0.15);
  color: #1dd1a1;
}

.status-badge.rejected {
  background: rgba(255, 107, 107, 0.15);
  color: #ff6b6b;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #7f8c8d;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 50rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  z-index: 100;
}

.stats {
  font-size: 28rpx;
  color: #7f8c8d;
}

.highlight {
  color: #ff6b6b;
  font-weight: 500;
}

.clear-btn {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  font-weight: 500;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.2);
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}