/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
  padding: 10rpx;
}

/* 顶部用户信息 */
.header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid white;
}

.user-info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 10rpx;
}

/* 周选择器 */
.week-selector {
  display: flex;
  justify-content: space-between;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 10rpx 0;
}

.day-name {
  font-size: 28rpx;
  color: #666;
}

.date {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.today {
  background-color: #e6f7ff;
  border-radius: 16rpx;
}

.today .date {
  color: #1890ff;
}

/* 日历区域 */
.calendar-container {
  flex: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.day-schedule {
  margin-bottom: 30rpx;
}

.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.available-count {
  font-size: 26rpx;
  color: #52c41a;
}

.time-slots {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.slot {
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: #f8f9fa;
}

.time {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.status {
  font-size: 26rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #e6f7ff;
  color: #1890ff;
}

.booker {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.available .status {
  background-color: #f6ffed;
  color: #52c41a;
}

.booked .status {
  background-color: #fff2e8;
  color: #fa541c;
}

/* 底部操作按钮 */
.action-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.add-btn, .share-btn {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.add-btn {
  background: linear-gradient(to right, #1890ff, #52c41a);
  color: white;
}

.share-btn {
  background-color: #f0f0f0;
  color: #333;
}