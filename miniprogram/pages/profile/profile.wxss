/* profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.user-card {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  margin-top: 20rpx;
}

.name {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
}

.title {
  font-size: 30rpx;
  opacity: 0.9;
  display: block;
  margin-top: 10rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 5rpx;
}

.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #1890ff;
}

/* 月份导航 */
.month-navigation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nav-arrow {
  width: 40rpx;
  height: 40rpx;
}

.month-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  margin: 0 40rpx;
}

/* 日历容器 */
.calendar-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 星期标题 */
.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background-color: #f0f8ff;
  border-radius: 12rpx 12rpx 0 0;
  margin-bottom: 2rpx;
}

.week-day {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.calendar-cell {
  width: 14.28%; /* 100% / 7 */
  aspect-ratio: 1/1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 50%;
  margin: 5rpx 0;
}

.day-number {
  font-size: 32rpx;
  font-weight: 500;
}

.other-month .day-number {
  color: #ccc;
}

.today .day-number {
  color: #fff;
  font-weight: bold;
}

.today {
  background-color: #1890ff;
}

.selected .day-number {
  color: #fff;
  font-weight: bold;
}

.selected {
  background-color: #52c41a;
}

.has-event::after {
  content: '';
  position: absolute;
  bottom: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #fa541c;
}

/* 查看当日详情按钮 */
.view-detail-btn {
  padding: 30rpx 20rpx;
  text-align: center;
}

.detail-btn {
  background: linear-gradient(to right, #1890ff, #52c41a);
  color: white;
  border-radius: 50rpx;
  height: 90rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
  max-width: 90%;
}

.detail-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.3);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.date-text {
  font-size: 36rpx;  /* 稍大字体突出日期 */
  font-weight: bold;
  min-width: 90rpx;   /* 确保完整显示5个字符 */
  text-align: center;
  letter-spacing: -0.5rpx; /* 紧凑字符间距 */
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 8rpx;  /* 您指定的间距 */
  white-space: nowrap;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .date-text {
    font-size: 34rpx;
    min-width: 85rpx;
  }
  
  .btn-text {
    font-size: 30rpx;
  }
}

@media (max-width: 360px) {
  .date-text {
    font-size: 32rpx;
    min-width: 80rpx;
  }
  
  .btn-text {
    font-size: 28rpx;
  }
}

/* 超小屏幕特殊处理 */
@media (max-width: 320px) {
  .btn-content {
    padding: 0 20rpx;
  }
  
  .date-text {
    font-size: 30rpx;
    min-width: 75rpx;
  }
  
  .btn-text {
    font-size: 26rpx;
    margin-left: 6rpx;
  }
}

/* 即将进行的任务 */
.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #1890ff;
  border-radius: 4rpx;
}

.section-more {
  font-size: 28rpx;
  color: #1890ff;
}

/* 任务卡片 */
.task-container {
  background: linear-gradient(to bottom, #f9fbfd, #4294db);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 15rpx;
}

.task-card {
  display: flex;
  flex-wrap: wrap;
  position: relative;
}

.task-time {
  width: 200rpx;
  padding-right: 30rpx;
  border-right: 2rpx dashed #e6f7ff;
}

.task-date {
  font-size: 42rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
}

.task-weekday {
  font-size: 30rpx;
  color: #666;
  display: block;
  margin: 10rpx 0;
}

.task-duration {
  font-size: 28rpx;
  color: #52c41a;
  background-color: #f6ffed;
  border-radius: 10rpx;
  padding: 6rpx 15rpx;
  display: inline-block;
}

.task-content {
  flex: 1;
  padding-left: 30rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.task-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.task-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.task-detail {
  font-size: 28rpx;
  color: #666;
}

/* 任务状态 - 顶部位置 */
.task-status {
  position: relative;
  top: 0;
  right: 0;
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  border-radius: 0 20rpx 0 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-status.confirmed {
  background-color: #f6ffed;
  color: #52c41a;
  border-bottom: 1rpx solid #b7eb8f;
}

.task-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
  border-bottom: 1rpx solid #ffd591;
}

.countdown {
  font-size: 24rpx;
  font-weight: bold;
  color: #389e0d;
}

.task-actions {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  color: #1890ff;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #91d5ff;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.cancel-btn {
  background-color: #fff2f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

/* 任务进度 */
.task-progress {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-top: 15rpx;
}

/* 空状态 */
.empty-tasks {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
}

