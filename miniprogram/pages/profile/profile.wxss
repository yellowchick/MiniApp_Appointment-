/* profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.user-card {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  margin-top: 20rpx;
}

.name {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
}

.title {
  font-size: 30rpx;
  opacity: 0.9;
  display: block;
  margin-top: 10rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-top: 5rpx;
}

.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 28rpx;
  color: #1890ff;
}

.booking-scroll {
  white-space: nowrap;
  width: 100%;
}

.booking-card {
  display: inline-block;
  width: 480rpx;
  border: 1rpx solid #eee;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-right: 20rpx;
  position: relative;
}

.booking-date {
  margin-bottom: 20rpx;
}

.booking-date .day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.booking-date .date {
  font-size: 26rpx;
  color: #666;
}

.booking-info .time {
  font-size: 30rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
  margin-bottom: 10rpx;
}

.booking-info .with {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.booking-info .topic {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}

.booking-status {
  position: absolute;
  top: 25rpx;
  right: 25rpx;
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
}

.booking-status.confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.booking-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.schedule-overview {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
}

.overview-label {
  font-size: 26rpx;
  color: #666;
  margin-top: 5rpx;
}

.schedule-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  color: #1890ff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.settings {
  margin-top: 10rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #333;
}

.setting-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: auto;
}