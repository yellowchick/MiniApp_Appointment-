/* pages/explore/explore.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.shared-schedule {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 30rpx;
}

.schedule-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-info .name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.user-info .title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 5rpx;
}

.schedule-content {
  padding: 30rpx;
}

.date-range {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.view-btn {
  background-color: #1890ff;
  color: white;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

.share-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.explore-image {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx auto;
}

.explore-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.explore-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

.share-box {
  background-color: #f0f8ff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.share-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  display: block;
  margin-bottom: 10rpx;
}

.share-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 30rpx;
}

.share-btn {
  background-color: #fff;
  border: 1rpx solid #1890ff;
  color: #1890ff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.share-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.copy-btn {
  color: #1890ff;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #e6f7ff;
}